.profile-wrap {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
    display: flex;
}

.bg-img {
    width: 100%;
    height: 100%;
    filter: blur(40rpx) opacity(30%) contrast(120%);
}

.user-wrap {
    position: absolute;
    width: 100%;
    height: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.avatar-wrap {
    width: 150rpx;
    height: 150rpx;
    margin: 25rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.info-wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;
    line-height: 50rpx;
}

.nickname-text {
    font-size: 45rpx;
    font-weight: 600;
    color: #333333;
}

.signature-text {
    font-size: 28rpx;
    font-weight: 400;
    color: #787878;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.menu-list-container {
    position: absolute;
    top: 400rpx;
    left: 0;
    width: 100%;
    z-index: 10;
    display: flex;
    flex-direction: column;
}