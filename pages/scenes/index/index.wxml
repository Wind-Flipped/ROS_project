<scroll-view class="page-container" scroll-y enhanced show-scrollbar="{{false}}">
    <!--导航栏-->
    <t-navbar title="{{navTitle}}" left-arrow="{{!edit}}" delta="{{1}}" >
        <t-icon wx:if="{{edit}}" name="check" slot="left" bindclick="handleCloseEdit" />
    </t-navbar>
    <!--场景列表-->
    <t-cell-group>
        <block wx:for="{{scenes}}" wx:key="index">
            <t-cell title="{{item}}" arrow="{{!edit}}" bordered="{{false}}" bindlongpress="handleEdit" bind:click="editScene" data-name="{{item}}" >
                <t-icon wx:if="{{index >= 1 && edit}}" name="minus-circle-filled" color="tomato" slot="left-icon" catchtap="delete" data-name="{{item}}" />
            </t-cell>
        </block>
    </t-cell-group>
    <t-fab icon="add" bind:click="addScene" aria-label="增加"></t-fab>
</scroll-view>